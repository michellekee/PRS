Rscript PRSice.R --dir . \
    --prsice ./PRSice \
    --base /home/michelle/GWAS_NEUR_full.txt \
    --target /storage/fk-master/data/PRSoS_common/GUSTO_plink_binaryFiles/GUSTO_INFO08_nodup_noambi_autosomes_plink_binary/GUSTO_INFO08_nodup_noambi_autosomes \
    --thread 8 \
    --stat BETA \
    --beta \
    --binary-target F \
    --snp MarkerName --chr CHR --bp POS --A1 A1 --A2 A2 --stat Beta --pvalue Pval \
    --clump-p 1 --clump-kb 500 --clump-r2 0.2 \
    --pheno-file /home/michelle/AllEthnicIntersection.pheno \
    --no-regress \
    --out GUSTO_Neuroticism_Turley2018
    
    
    ## With proper phenotype file
    Rscript PRSice.R --dir . \
    --prsice ./PRSice \
    --base /home/michelle/GWAS_NEUR_full.txt \
    --target /storage/fk-master/data/PRSoS_common/GUSTO_plink_binaryFiles/GUSTO_INFO08_nodup_noambi_autosomes_plink_binary/GUSTO_INFO08_nodup_noambi_autosomes \
    --thread 8 \
    --stat BETA \
    --beta \
    --binary-target F \
    --snp MarkerName --chr CHR --bp POS --A1 A1 --A2 A2 --stat Beta --pvalue Pval \
    --clump-p 1 --clump-kb 500 --clump-r2 0.2 \
    --pheno /home/michelle/AllEthnicIntersection_neuroMother2.pheno \
    --cov /home/michelle/AllEthnicIntersection_neuroMother.cov \
    --cov-col mother_PC1,mother_PC2 \
    --out GUSTO_Neuroticism_Turley2018_output_$(date +%y%m%d)
 
 
 # Step 1: customize full GWAS (to be like: SNP, P, BETA, A1, A2)
cd /home/michelle/
awk -v OFS='\t' '{print $1,$8,$6,$4,$5}' GWAS_NEUR_full.txt > GWAS_Neuroticism_Full.txt

# Step 2: run PRSoS to produce the SNP log (use all SNPs and print the SNP log, i.e., --thresholds 1 --snp_log)

spark-submit PRS_run.py /data/PRSoS_common/GUSTO_INFO08_nodup_noambi_autosomes.gen /home/michelle/GWAS_Neuroticism_Full.txt \
Discard_For_Clumping_Neuroticism_Full --sample_file /data/PRSoS_common/AllEthnicIntersection.sample \
--filetype GEN --GWAS_delim "\t" --thresholds 1 --no_maf --snp_log 
